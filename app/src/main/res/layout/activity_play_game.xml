<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qsd.edictionary.activitys.PlayGameActivity">
    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_title"
                android:text="记忆法小游戏"
                android:textSize="20sp"
                android:drawablePadding="5dp"
                android:textColor="@color/color_white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:background="@color/white"
        android:gravity="center"
        android:text="联系次数：02"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/third"
            android:text="12"
            android:shadowColor="#40000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/first"
            android:text="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:shadowColor="#40000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" />

        <TextView
            android:background="@mipmap/game_bg"
            android:padding="29dp"
            android:id="@+id/sencond"
            android:text="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/im_game"
            android:src="@mipmap/grade"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/third"
            android:layout_alignEnd="@+id/third" />

        <Button
            android:background="@drawable/buttonstyle"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:text="等级1"
            android:textColor="@color/white"
            android:layout_below="@+id/im_game"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/button_grade" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/buttonstyle"
            android:text="0s"
            android:textColor="@color/white"
            android:id="@+id/button_game"
            android:layout_below="@+id/im_time"
            android:layout_toLeftOf="@+id/sencond"
            android:layout_toStartOf="@+id/sencond"
             />

        <ImageView
            android:id="@+id/im_time"
            android:src="@mipmap/time"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/first"
            android:layout_alignStart="@+id/first" />

        <Button
            android:id="@+id/game_NO"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bd"
            android:textColor="@drawable/button_text"
            android:layout_below="@+id/sencond"
            android:layout_centerHorizontal="true"

            android:text="不记得：否"
            android:layout_marginTop="55dp" />
    </RelativeLayout>


</LinearLayout>
