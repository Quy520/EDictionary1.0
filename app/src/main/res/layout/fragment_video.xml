<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_contenr"
    tools:context="com.example.qsd.edictionary.fragment.VideoFragment">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/sub_swipe"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/sub_fragment_vedio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/sub_linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/icon_layout"

            android:layout_height="wrap_content"
            android:minHeight="180dp">

            <ImageView
                android:id="@+id/video_icon"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@mipmap/night_biz_media_bg"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/video"
                android:layout_alignStart="@+id/video" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/biz_video_list_play_icon_big"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/vedio_play" />

        <com.example.qsd.edictionary.videoview.VideoSuperPlayer
            android:id="@+id/video"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true" >
        </com.example.qsd.edictionary.videoview.VideoSuperPlayer>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无视屏"

        android:layout_gravity="center"
        />


    <Button
        android:background="@drawable/buttonstyle"
        android:layout_marginTop="20dp"
        android:id="@+id/sub_word"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:text="去订阅记忆法"
        android:textColor="@color/color_white"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstyle"
        android:id="@+id/sub_view"
        android:text="去订阅单词视屏"
        android:textColor="@color/color_white"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
